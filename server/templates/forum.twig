{% extends 'base.twig' %}
{% block content %}

{% if loggedIn %}
    <form id="postForm" class="post-form hidden">
        <input type="text" name="title" placeholder="Post title" required>
        <textarea name="content" placeholder="Write something..." required></textarea>
        <button type="submit">Post</button>
    </form>
{% endif %}

<h2>Posts</h2>
<ul class="posts-list">
    {% for post in posts %}
        <li class="clickable-post" data-post-id="{{ post.id }}">
            <strong>{{ post.title }}</strong>
            <p>{{ post.content }}</p>
            <small>By {{ post.email }}</small>
        </li>
    {% else %}
        <li>No posts yet.</li>
    {% endfor %}
</ul>

{% endblock %}
