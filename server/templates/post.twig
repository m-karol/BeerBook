{% extends 'base.twig' %}
{% block content %}

<h2>{{ post.title }}</h2>
<p>{{ post.content }}</p>
<small>By {{ post.email }}</small>

<h3>Comments</h3>
<ul class="posts-list">
    {% for comment in comments %}
        <li>
            <strong>{{ comment.email }}</strong>
            <p>{{ comment.content }}</p>
        </li>
    {% else %}
        <li>No comments yet.</li>
    {% endfor %}
</ul>

{% if loggedIn %}
    <form id="commentForm">
        <textarea name="content" placeholder="Add a comment..." required></textarea>
        <button type="submit">Comment</button>
    </form>
{% endif %}

{% endblock %}
